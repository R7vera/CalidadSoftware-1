{
    "name": "ferreteria/api",
    "description": "API REST para sistema de ferreterÃ­a",
    "type": "project",
    "autoload": {
        "classmap": [
            "Ferreteria/app/utils",
            "Ferreteria/app/model",
            "Ferreteria/app/controller",

            "tests",
            "testscontroller"
        ],
        "psr-4": {
            "App\\": "Ferreteria/app/",
            "App\\Model\\": "Ferreteria/app/model/",
            "App\\Utils\\": "Ferreteria/app/utils/",
            "App\\controller\\": "Ferreteria/app/controller/",

            "Tests\\": "tests/",
            "TestsController\\": "testscontroller/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "TestsController\\": "testscontroller/"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpunit/php-code-coverage": "^10.1",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}